<% layout("/layouts/boilerplate.ejs") %>

<div class="row">
  <div class="col-8 offset-3 mt-3">
    <h3><b><%= listingsData.title %></b></h3>
  </div>

  <div class="col-5 offset-3">
    <div class="card show-card">
      <img
        src="<%= listingsData.image.url %>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body mt-2">
        <h4>Owned by : <%= listingsData.owner.username %></h4>
        <p class="card-text"><%= listingsData.description %></p>
        <p class="card-text">
          &#8377; <%= listingsData.price.toLocaleString("en-IN") %>
        </p>
        <p class="card-text"><%= listingsData.location %></p>
        <p class="card-text"><%= listingsData.country %></p>
      </div>
    </div>
  </div>

  <% if (currUser && listingsData.owner._id.equals(currUser._id)) { %>
  <div class="btns mb-3">
    <a
      href="/listings/<%=listingsData._id%>/edit"
      class="btn btn-dark add-btn col-1 offset-3"
      >Edit</a
    >

    <form
      method="post"
      action="/listings/<%=listingsData._id%>?_method=delete"
      class="col-1 ms-3"
    >
      <button
        class="btn btn-dark w-100"
        type="submit"
        onclick="confirmDelete(event, this.form)"
      >
        Delete
      </button>
    </form>
  </div>

  <% } %>

  <div class="col-5 offset-3">
    <% if (currUser) { %>
    <hr />
    <h4>Leave a review</h4>
    <form
      action="/listings/<%= listingsData._id %>/reviews/"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mt-2 mb-2">
        <label for="rating" class="form-label">Rating : </label>
        <fieldset class="starability-grow">
          <input
            type="radio"
            id="rating"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>

      <div class="mb-2">
        <label for="comment" class="form-label">Comment :</label>
        <textarea
          name="review[comment]"
          class="form-control"
          id="comment"
          cols="30"
          rows="5"
          required
        ></textarea>
        <div class="invalid-feedback">Comment field cant't be empty</div>
      </div>
      <button class="mt-2 mb-3 btn btn-outline-dark">Submit review</button>
    </form>
    <% } %> <% if (listingsData.reviews.length) { %>
    <hr />
    <h4>All Reviews</h4>
    <br />
    <div class="row review-row">
      <% for(let rev of listingsData.reviews){ %>
      <div class="review-card mb-3 ms-3 col-5">
        <div class="card-body">
          <h5 class="card-title">@<%= rev.author.username %></h5>
          <p
            class="starability-result mt-2"
            data-rating="<%= rev.rating %>"
          ></p>
          <p class="card-text mb-1"><%= rev.comment %></p>
          <% if (currUser && rev.author._id.equals(currUser._id)) { %>
          <form
            action=" /listings/<%= listingsData._id%>/reviews/<%=rev._id%>?_method=delete "
            method="POST"
          >
            <button class="btn btn-dark">Delete</button>
          </form>
          <% } %>
        </div>
      </div>
      <% } %>
    </div>
    <% } %>
  </div>
</div>

<script>
  function confirmDelete(event, form) {
    event.preventDefault();
    const confirmation = confirm(
      "Are you sure you want to delete this listing?"
    );
    if (confirmation) {
      form.submit();
    }
  }
</script>
